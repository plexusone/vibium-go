{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/grokify/vibium-go/vpat/vpat.schema.json",
  "properties": {
    "product": {
      "properties": {
        "name": {
          "type": "string",
          "description": "Product name"
        },
        "version": {
          "type": "string",
          "description": "Product version"
        },
        "description": {
          "type": "string",
          "description": "Brief product description"
        },
        "vendor": {
          "type": "string",
          "description": "Vendor or organization name"
        },
        "url": {
          "type": "string",
          "description": "Product URL"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ],
      "description": "Information about the product being evaluated"
    },
    "evaluation": {
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "Evaluation date"
        },
        "evaluator": {
          "type": "string",
          "description": "Person or organization performing evaluation"
        },
        "methods": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Evaluation methods used (e.g. Automated testing or Manual testing)"
        },
        "tools": {
          "items": {
            "properties": {
              "name": {
                "type": "string",
                "description": "Tool name"
              },
              "version": {
                "type": "string",
                "description": "Tool version"
              }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
              "name"
            ]
          },
          "type": "array",
          "description": "Tools used for evaluation"
        },
        "urls": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "URLs that were evaluated"
        },
        "scope": {
          "type": "string",
          "description": "Evaluation scope description"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "date",
        "methods"
      ],
      "description": "Information about the evaluation process"
    },
    "standard": {
      "type": "string",
      "description": "Accessibility standard (e.g. WCAG 2.2 Level AA)"
    },
    "criteria": {
      "items": {
        "properties": {
          "id": {
            "type": "string",
            "description": "WCAG criterion ID (e.g. 1.1.1)"
          },
          "name": {
            "type": "string",
            "description": "Criterion name"
          },
          "level": {
            "type": "string",
            "enum": [
              "A",
              "AA",
              "AAA"
            ],
            "description": "WCAG level"
          },
          "conformance": {
            "type": "string",
            "description": "Conformance level achieved"
          },
          "evaluationMethod": {
            "type": "string",
            "description": "How this criterion was evaluated"
          },
          "remarks": {
            "type": "string",
            "description": "Additional explanation or context"
          },
          "violations": {
            "items": {
              "properties": {
                "ruleId": {
                  "type": "string",
                  "description": "Axe-core rule ID"
                },
                "description": {
                  "type": "string",
                  "description": "Violation description"
                },
                "impact": {
                  "type": "string",
                  "description": "Violation impact (critical or serious or moderate or minor)"
                },
                "count": {
                  "type": "integer",
                  "description": "Number of instances found"
                },
                "elements": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array",
                  "description": "Example affected elements (HTML)"
                },
                "helpUrl": {
                  "type": "string",
                  "description": "URL with more information"
                }
              },
              "additionalProperties": false,
              "type": "object",
              "required": [
                "description",
                "count"
              ]
            },
            "type": "array",
            "description": "Specific violations found"
          },
          "axeRules": {
            "items": {
              "type": "string"
            },
            "type": "array",
            "description": "Axe-core rules mapped to this criterion"
          }
        },
        "additionalProperties": false,
        "type": "object",
        "required": [
          "id",
          "name",
          "level",
          "conformance",
          "evaluationMethod"
        ]
      },
      "type": "array",
      "description": "Results for each success criterion"
    },
    "summary": {
      "properties": {
        "totalCriteria": {
          "type": "integer",
          "description": "Total criteria in scope"
        },
        "supports": {
          "type": "integer",
          "description": "Criteria fully supported"
        },
        "partiallySupports": {
          "type": "integer",
          "description": "Criteria partially supported"
        },
        "doesNotSupport": {
          "type": "integer",
          "description": "Criteria not supported"
        },
        "notApplicable": {
          "type": "integer",
          "description": "Criteria not applicable"
        },
        "notEvaluated": {
          "type": "integer",
          "description": "Criteria not evaluated"
        },
        "automatedCoverage": {
          "type": "number",
          "description": "Percentage of criteria covered by automated testing"
        },
        "totalViolations": {
          "type": "integer",
          "description": "Total violations found"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "totalCriteria",
        "supports",
        "partiallySupports",
        "doesNotSupport",
        "notApplicable",
        "notEvaluated",
        "automatedCoverage",
        "totalViolations"
      ],
      "description": "Aggregate conformance statistics"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes or disclaimers"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Report generation timestamp"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "product",
    "evaluation",
    "standard",
    "criteria",
    "summary",
    "generatedAt"
  ],
  "title": "VPAT Report Schema",
  "description": "JSON Schema for Vibium VPAT (Voluntary Product Accessibility Template) reports"
}
